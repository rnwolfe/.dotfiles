#!/usr/bin/env bash
set -euo pipefail

if ! command -v mise >/dev/null 2>&1; then
  # Official installer supports a curl|sh flow (installs into ~/.local/bin by default). :contentReference[oaicite:8]{index=8}
  curl -fsSL https://mise.run | sh
fi

# Ensure PATH for non-interactive shells
export PATH="$HOME/.local/bin:$PATH"

# Install all tools declared in ~/.config/mise/config.toml
mise install
