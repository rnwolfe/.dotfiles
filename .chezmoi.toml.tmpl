{{- $name := promptStringOnce . "name" "Full name" -}}
{{- $email := promptStringOnce . "email" "Git email" -}}
{{- $lastpassLoginEmail := promptStringOnce . "lastpassLoginEmail" "LastPass login email (for hints)" -}}
{{- $lastpassLLMItem := promptStringOnce . "lastpassLLMItem" "LastPass item NAME/ID for LLM keys (e.g. 'LLM')" -}}

[data]
name = {{ $name | quote }}
email = {{ $email | quote }}
lastpassLoginEmail = {{ $lastpassLoginEmail | quote }}
lastpassLLMItem = {{ $lastpassLLMItem | quote }}
